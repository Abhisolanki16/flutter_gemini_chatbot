<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Android 12+ uses SplashScreen API -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Splash background -->
        <item name="android:windowSplashScreenBackground">@color/splash_color</item>

        <!-- Splash icon (animated or static) -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

        <!-- Duration of auto-animation (optional) -->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>

        <!-- The theme used after the splash disappears
        <item name="postSplashScreenTheme">@style/NormalTheme</item> -->
    </style>

</resources>

